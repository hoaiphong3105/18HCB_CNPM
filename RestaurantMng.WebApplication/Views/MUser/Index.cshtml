@using RestaurantMng.Data.Models;
@using RestaurantMng.Service.User.Models.Dtos;
@model List<User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> BoPhan = new List<string>() { "Admin", "Quản lý", "Đầu bếp", "Thu ngân", "Phục vụ" };
}

@section style{
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/ionicons.min.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link href="~/Content/datatable/jquery.dataTables.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/datatable/jquery.dataTables.min.js"></script>
    <script>
        var isAddedNew = false;
        var updatedRow = {};
        var selectedRowID = -1;
        var table = $('#employeeTable').DataTable({
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false,
        });

        //$('#employeeTable tbody').on('click', 'tr', function () {
        //    $(this).toggleClass('selected');
        //});

        $('#newEmployee').click(function () {
            $("#Password").prop('required', true);
            $('#modal-default').modal('show');
            isAddedNew = true;
        });
        

        function update(id) {
            selectedRowID = id;
        }

        function deleteUser(id) {
            selectedRowID = id;
        }

        $('#employeeTable tbody').on('click', '.updateBtn', function () {
            var idx = $(this).closest('tr').index();
            var dataRow = table.rows(idx).data();
            isAddedNew = false;
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetUser", "MUser")',
                data: JSON.stringify({ id: dataRow[0][0] }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data) {
                        $('#rowIndex').val(idx);
                        $('#ID').val(data.ID);
                        $('#UserName').val(data.UserName);
                        $('#FullName').val(data.FullName);
                        $('#Password').val('');
                        $('#Address').val(data.Address);
                        $('#GroupID').val(data.GroupID);
                        $('#DateOfBirth').val(data.DateOfBirth);
                        $('#Phone').val(data.Phone);
                        $('#Salary').val(data.Salary);
                        $("#Password").prop('required', false);
                        $('#modal-default').modal('show');
                    }
                    else {
                        alert("Khong co du lieu!");
                    }
                },
                error: function (err) {
                    alert("Error!");
                }
            });
        });

        $('#employeeTable tbody').on('click', '.deleteBtn', function () {
            var idx = $(this).closest('tr').index();
            var dataRow = table.rows(idx).data();
            if (confirm('Xac nhan se xoa nhan vien nay?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "MUser")',
                    data: JSON.stringify({ id: dataRow[0][0] }),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (rs) {
                        if (rs.code > 0) {
                            table.row(idx).remove().draw(false);
                            alert("Xoá thanh cong!");
                            $('#modal-default').modal('hide');
                        }
                        else {
                            alert(rs.message);
                        }
                    },
                    error: function (err) {
                        alert("Error!");
                    }
                });
            }
        });

        $('#submitChange').click(function () {
            if (!$("#formMain").checkValidity()) { 
                return;
            }
            //insert
            if (isAddedNew) {
                var employee = {
                    UserName: $('#UserName').val(),
                    FullName: $('#FullName').val(),
                    Password: $('#Password').val(),
                    Address: $('#Address').val(),
                    GroupID: $('#GroupID').val(),
                    DateOfBirth: $('#DateOfBirth').val(),
                    Phone: $('#Phone').val(),
                    Salary: $('#Salary').val(),
                    Status: true,
                };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Insert", "MUser")',
                    data: JSON.stringify(employee),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (rs) {
                        if (rs.code >= 0) {
                            alert("Them thanh cong!");
                            var newData = [
                                rs.User.ID, rs.User.FullName, rs.User.UserName, rs.User.Address,
                                rs.User.DateOfBirth, rs.User.Phone, rs.User.Salary,
                                '<button type="button" class="btn btn-default editButton"><i class="fa fa-edit"></i></button>' +
                                '<button type="button" class="btn btn-default editButton"><i class="fa fa-trash"></i></button>'
                            ];
                            table.row.add(newData).draw(false);
                            $("#formMain")[0].reset();
                            isAddedNew = false;
                            $('#modal-default').modal('hide');
                        } else {
                            alert(rs.message);
                        }
                    },
                    error: function () {
                        alert("Error!");
                    }
                });
            }
            //update
            else {
                var employee = {
                    ID: $('#ID').val(),
                    UserName: $('#UserName').val(),
                    FullName: $('#FullName').val(),
                    Password: $('#Password').val(),
                    Address: $('#Address').val(),
                    GroupID: $('#GroupID').val(),
                    DateOfBirth: $('#DateOfBirth').val(),
                    Phone: $('#Phone').val(),
                    Salary: $('#Salary').val(),
                    Status: true,
                };
                var idx = $('#rowIndex').val();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Update", "MUser")',
                    data: JSON.stringify(employee),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (rs) {
                        if (rs.code >= 0) {
                            alert(rs.message);
                            var newData = [
                                rs.User.ID,rs.User.FullName, rs.User.UserName, rs.User.Address,
                                rs.User.DateOfBirth, rs.User.Phone, rs.User.Salary,
                                '<button type="button" class="btn btn-default editButton"><i class="fa fa-edit"></i></button>' +
                                '<button type="button" class="btn btn-default editButton"><i class="fa fa-trash"></i></button>'
                            ]
                            table.row(idx).data(newData).draw();
                            $('#modal-default').modal('hide');
                        } else {
                            alert("Cap nhat that bai!");
                        }
                    },
                    error: function () {
                        alert("Error!");
                    }
                });
            }
        });

        $('#modal-default').on('hidden.bs.modal', function () {
            isAddedNew = false;
            $("#formMain")[0].reset();
        })
    </script>
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Danh sách nhân viên</h3>
        <button id="newEmployee" class="btn btn-block btn-success" style="width:auto;display:inline-block">+</button>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="employeeTable" class="table table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Họ và tên</th>
                    <th>Account</th>
                    <th>Địa chỉ</th>
                    <th>Ngày sinh</th>
                    <th>Số điện thoại</th>
                    <th>Lương</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <th>@p.ID</th>
                        <th>@p.FullName</th>
                        <th>@p.UserName</th>
                        <th>@p.Address</th>
                        <th>@p.DateOfBirth</th>
                        <th>@p.Phone</th>
                        <th>@p.Salary</th>
                        <th>
                            <button type="button" class="btn btn-default updateBtn"><i class="fa fa-edit"></i></button>
                            <button type="button" class="btn btn-default deleteBtn"><i class="fa fa-trash"></i></button>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->

<div class="modal fade" id="modal-default" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Default Modal</h4>
            </div>
            <div class="modal-body">
                <form id="formMain" class="form-horizontal">
                    <input type="hidden" id="ID">
                    <input type="hidden" id="rowIndex">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Account</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="UserName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Họ tên</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="FullName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mật khẩu</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Bộ phận</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="GroupID">
                                    @Html.Action("PartialListGroupUser", "MUser")
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Địa chỉ</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ngày sinh</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control" id="DateOfBirth" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Số điện thoại</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Phone" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Lương</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="Salary" required>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <input id="submitChange" type="submit" class="btn btn-primary" />
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
